<Application 
    x:Class="ChillMusicUWP.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ChillMusicUWP"
    xmlns:converters="using:ChillMusicUWP.Converters">

    <Application.Resources>
        <ResourceDictionary>
            <converters:BooleanToImageConverter x:Key="BoolToImageConverter"></converters:BooleanToImageConverter>
            <Style TargetType="Popup" x:Key="PopupStyle">
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>
                <Setter Property="Margin" Value="0"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
