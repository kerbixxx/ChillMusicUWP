<Page
    x:Class="ChillMusicUWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:item="using:ChillMusicUWP.MVVM.Model"
    xmlns:local="using:ChillMusicUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="/Assets/background.jpg"></ImageBrush>
        </Grid.Background>
        <GridView ItemsSource="{Binding Songs}">
            <GridView.ItemTemplate>
                <DataTemplate x:DataType="item:Song">
                    <UserControl>
                        <StackPanel x:Name="SongCard" Margin="5" Width="200">
                            <Image Source="{x:Bind Image}" 
                                   Width="300" 
                                   Height="300"></Image>
                            <Grid x:Name="SongDetailsGrid">
                                <TextBlock Text="{x:Bind Name, Mode=OneWay}"></TextBlock>
                            </Grid>
                        </StackPanel>
                    </UserControl>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
    </Grid>
</Page>
