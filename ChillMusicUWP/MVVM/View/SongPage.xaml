<Page
    x:Class="ChillMusicUWP.MVVM.View.SongPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ChillMusicUWP.MVVM.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="using:ChillMusicUWP.MVVM.ViewModel" 
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="{x:Bind ViewModel.CurrentSong.Image}"/>
        </Grid.Background>
        
        <Button Content="🠔" HorizontalAlignment="Left" VerticalAlignment="Top" 
                Margin="30" Background="White" Command="{Binding NavigateToMainCommand}"/>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,50,0,0">
            <TextBlock Text="{x:Bind ViewModel.CurrentSong.Name}" TextAlignment="Center" IsColorFontEnabled="True"/>

            <Button Content="Добавить" HorizontalAlignment="Center" 
                    Background="White" Command="{Binding OpenSoundWindow}"/>
            <ItemsControl>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Content="тт"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
        <Button Content="Пауза/Возобновление" HorizontalAlignment="Left" 
                VerticalAlignment="Bottom" Margin="50" Background="White"
                Command="{Binding PauseSongCommand}"/>        
        <Button Content="Таймер" HorizontalAlignment="Right" 
                VerticalAlignment="Bottom" Margin="50" Background="White"
                Command="{Binding SetTimerCommand}"/>
    </Grid>
</Page>
